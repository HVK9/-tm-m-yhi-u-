UIListLayout.Parent = ScrollFrame
UIListLayout.SortOrder = Enum.SortOrder.LayoutOrder
UIListLayout.Padding = UDim.new(0, 4)

-- :: NÚT BẬT/TẮT AIMBOT ::
local ToggleBtn = Instance.new("TextButton")
ToggleBtn.Name = "ToggleBtn"
ToggleBtn.Size = UDim2.new(1, -20, 0, 40)
ToggleBtn.Position = UDim2.new(0, 10, 1, -50)
ToggleBtn.BackgroundColor3 = Color3.fromRGB(60, 60, 60)
ToggleBtn.Text = "Trạng thái: TẮT"
ToggleBtn.TextColor3 = Color3.fromRGB(200, 200, 200)
ToggleBtn.Font = Enum.Font.GothamBold
ToggleBtn.TextSize = 14
ToggleBtn.Parent = MainFrame

local ToggleCorner = Instance.new("UICorner")
ToggleCorner.CornerRadius = UDim.new(0, 6)
ToggleCorner.Parent = ToggleBtn

-- --- 2. CHỨC NĂNG LOGIC ---

-- Hàm cập nhật danh sách người chơi
local function RefreshPlayers()
    -- Xóa danh sách cũ
    for _, child in pairs(ScrollFrame:GetChildren()) do
        if child:IsA("TextButton") then child:Destroy() end
    end
    
    local players = Players:GetPlayers()
    -- Tự động chỉnh độ dài khung cuộn
    ScrollFrame.CanvasSize = UDim2.new(0, 0, 0, #players * 34) 
    
    for _, p in pairs(players) do
        if p ~= LocalPlayer then
            local btn = Instance.new("TextButton")
            btn.Size = UDim2.new(1, -10, 0, 30)
            btn.BackgroundColor3 = Color3.fromRGB(60, 60, 65)
            btn.Text = p.Name
            btn.TextColor3 = Color3.white
            btn.Font = Enum.Font.SourceSans
            btn.Parent = ScrollFrame
            
            -- Hiệu ứng khi chọn mục tiêu
            btn.MouseButton1Click:Connect(function()
                _G.TargetPlayer = p
                -- Reset màu các nút khác
                for _, otherBtn in pairs(ScrollFrame:GetChildren()) do
                    if otherBtn:IsA("TextButton") then
                        otherBtn.BackgroundColor3 = Color3.fromRGB(60, 60, 65)
                    end
                end
                -- Đổi màu nút được chọn thành vàng cam
                btn.BackgroundColor3 = Color3.fromRGB(255, 170, 0)
                
                -- Thông báo trên nút Toggle
                if _G.AimbotEnabled then
                    ToggleBtn.Text = "ĐANG KHÓA: " .. p.Name
                else
                    ToggleBtn.Text = "MỤC TIÊU: " .. p.Name
                end
            end)
            
            -- Bo góc nút player
            local c = Instance.new("UICorner"); c.CornerRadius = UDim.new(0,4); c.Parent = btn
        end
    end
end

-- Sự kiện Thu nhỏ / Phóng to
MinimizeBtn.MouseButton1Click:Connect(function()
    MainFrame.Visible = false
    OpenButton.Visible = true
end)

OpenButton.MouseButton1Click:Connect(function()
    MainFrame.Visible = true
    OpenButton.Visible = false
end)

-- Sự kiện Bật / Tắt Aimbot
ToggleBtn.MouseButton1Click:Connect(function()
    if _G.TargetPlayer == nil then
        ToggleBtn.Text = "CHƯA CHỌN MỤC TIÊU!"
        wait(1)
        ToggleBtn.Text = "Trạng thái: TẮT"
        return
    end

    _G.AimbotEnabled = not _G.AimbotEnabled
    
    if _G.AimbotEnabled then
        ToggleBtn.BackgroundColor3 = Color3.fromRGB(0, 200, 100) -- Màu xanh lá
        ToggleBtn.Text = "ĐANG KHÓA: " .. _G.TargetPlayer.Name
        ToggleBtn.TextColor3 = Color3.black
    else
        ToggleBtn.BackgroundColor3 = Color3.fromRGB(60, 60, 60) -- Màu xám
        ToggleBtn.Text = "Trạng thái: TẮT"
        ToggleBtn.TextColor3 = Color3.fromRGB(200, 200, 200)
    end
end)

-- Tự động cập nhật danh sách khi có người vào/ra
Players.PlayerAdded:Connect(RefreshPlayers)
Players.PlayerRemoving:Connect(RefreshPlayers)
RefreshPlayers() -- Chạy lần đầu

-- --- 3. LOGIC AIMBOT (SKILL) ---
RunService.RenderStepped:Connect(function()
    if _G.AimbotEnabled and _G.TargetPlayer and _G.TargetPlayer.Character then
        local targetChar = _G.TargetPlayer.Character
        local targetHRP = targetChar:FindFirstChild("HumanoidRootPart")
        
        local myChar = LocalPlayer.Character
        local myHRP = myChar and myChar:FindFirstChild("HumanoidRootPart")
        
        if targetHRP and myHRP then
            -- 1. Xoay Camera về phía địch (Giúp định hướng skill chuột)
            Camera.CFrame = CFrame.new(Camera.CFrame.Position, targetHRP.Position)
            
            -- 2. Xoay Nhân vật về phía địch (Giúp skill định hướng nhân vật như Z, X)
            -- Giữ nguyên trục Y của mình để không bị chúi đầu xuống đất
            local lookPos = Vector3.new(targetHRP.Position.X, myHRP.Position.Y, targetHRP.Position.Z)
            myHRP.CFrame = CFrame.lookAt(myHRP.Position, lookPos)
        end
    elseif _G.AimbotEnabled and (not _G.TargetPlayer or not _G.TargetPlayer.Parent) then
        -- Nếu mục tiêu thoát game, tắt aimbot
        _G.AimbotEnabled = false
        ToggleBtn.Text = "Mất mục tiêu"
        ToggleBtn.BackgroundColor3 = Color3.fromRGB(60, 60, 60)
    end
end)
